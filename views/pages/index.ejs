<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
  <% include ../partials/nav.ejs %>
  <div class="container">
    <% if (locals.link) { %>
      <div class="alert alert-success alert-dismissible" role="alert">
        Shortened Link: 
        <a href="//<%= locals.link %>" class="alert-link"><%= locals.link %></a>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>
    <% if (locals.error) { %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <strong><%= locals.error %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% } %>
    <form method="POST" action="/">
      <input type="hidden" name="_csrf" value="<%= token %>">
      <div class="form-group">
        <label for="exampleInputEmail1">URL to Shorten</label>
        <input name="url" type="url" class="form-control" aria-describedby="urlHelp" placeholder="https://www.your-link.com" required autocomplete="off">
        <small id="urlHelp" class="form-text text-muted">Your URL to shorten.</small>
      </div>
      <button type="submit" class="btn btn-primary">Shorten Link</button>
    </form>
  </div>
</body>
</html>
